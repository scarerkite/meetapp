.col-md-6
  %h2
    Edit Profile
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .form-group
      %div
        = f.label :name
        %br/
        = f.text_field :name, class: "form-control", placeholder: "Enter name"
    .form-group
      %div
        = f.label :username
        %br/
        = f.text_field :username, class: "form-control", placeholder: "Enter username"
    .form-group
      %div
        = f.label :email
        %br/
        = f.email_field :email, class: "form-control", placeholder: "Enter email"
    .form-group
      %div
        = f.label :bio
        %br/
        = f.text_area :bio, class: "form-control", placeholder: "Write a bit about yourself..."
    .form-group
      %div
        = f.label :image
        %br/
        = f.file_field :image
    / .form-group
    /   %div
    /     = f.label :remote_image_url, 'or add by URL'
    /     %br/
    /     = f.url_field :remote_image_url, class: "form-control"

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .form-group
      %div
        = f.label :password
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New password"
    .form-group
      %div
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm new password"
    .form-group
      %div
        = f.label :current_password
        %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Current password"
    %div= f.submit "Update", class: "btn btn-primary"

  %p
    = link_to "Link this account with your Google account", user_omniauth_authorize_path(:google_oauth2)
  %p
    = link_to "Link this account with your Facebook account", user_omniauth_authorize_path(:facebook)

  %h3 Cancel my account
  %p
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
  = link_to "Back", :back
