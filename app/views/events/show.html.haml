%p#notice= notice

%p
  %b Title:
  = @event.title
%p
  %b Description:
  = @event.description
%p
  %b Date:
  = @event.date
%p
  %b Address:
  = @event.address
%p
  %b Postcode:
  = @event.postcode

%h2 Updates
= form_for [@event, @event.comments.build] do |f|
  %p= f.text_area :body, :size => '40x10'
  %p= f.submit "Post update"


- @event.comments.each do |comment|
  %p
    %b= comment.user.username
    = comment.body


= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Post update', new_event_update_path(@event)
\|
= link_to 'Back', events_path
