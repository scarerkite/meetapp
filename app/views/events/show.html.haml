%p#notice= notice

= content_tag "div", nil, id: "lat", data: {latitude: @event.latitude}
= content_tag "div", nil, id: "lng", data: {longitude: @event.longitude}

.col-md-12
  %h2
    = @event.title
  .col-md-6
    #map_canvas

    = link_to 'Edit', edit_event_path(@event)
    \|
    = link_to 'Send invitations', new_event_invitation_path(@event)
    \|
    = link_to 'Back', events_path

    %h2 Updates
    - @event.comments.each do |comment|
      %p
        %b= comment.user.username
        = comment.body

    
    .form-group
      = form_for [@event, Comment.new] do |f|
        %p= f.text_area :body
        %p= f.submit "Post update"

  .col-md-6
    
    %h3
      = @event.description

    %h4
      = @event.time.strftime("%H:%M")
    %h4 
      = @event.date.strftime("%d/%m/%y")
    %p
      %h4
        = [@event.address, @event.postcode].join(", ")

    %h3 Who?
    - @event.invitations.each do |invitation|
      %p
        / = invitation.invitee.image.profile.url, class: "small-avatar"
        = invitation.invitee.name






