= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :date
    = f.date_field :date
  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :postcode
    = f.text_field :postcode
  .form-group
    - User.all.each do |u|
      -if u != current_user
        = label_tag u.name
        = check_box_tag "event[invitations_attributes][][invitee_id]", u.id
        
  .actions
    = f.submit 'Save'
