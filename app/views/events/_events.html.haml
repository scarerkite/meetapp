.row
  .col-md-6
    %h3 Hosting
    - @hosted_events.order('date ASC').each do |event|
      .panel.panel-default
        .panel-heading
          %h3  
            = link_to event.title, event
        .panel-body
          %p
            = event.address
          %p
            = event.date.strftime("%d/%m/%y")

  

      / = link_to 'Edit', edit_event_path(event)
      / = link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

  .col-md-6

    %h3 Going
    - @invited_events.order('date ASC').each do |event|
      - if current_user.invitations.where("event: event AND accepted: true")
        .panel.panel-default
          .panel-heading
            %h4 
              = link_to event.title, event
          .panel-body
            %p
              = event.address
            %p
              = event.date.strftime("%d/%m/%y")

